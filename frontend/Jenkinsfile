pipeline {
  def remote = [:]
  remote.name = 'raspberry-pi'
  remote.host = '192.168.0.24'
  remote.user = 'pi'
  remote.password = '${ACCESS_KEY}'
  remote.allowAnyHosts = true
  agent {
    label 'docker-agent'
  }

  tools {
    nodejs '18.6.0'
  }

  stages {
    stage('Build') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm install @angular/cli --location=global'
          sh 'ng build'
        }
      }
    }
    stage('Deploy') {
      when {
        expression {
          currentBuild.result == null || currentBuild.result == 'SUCCESS'
        }
      }
      environment {
        ACCESS_KEY = credentials('raspberry-pi-ssh')
      }
      steps {
      dir('frontend') {
          sshCommand remote: remote, command: "ls -lrt"
        }
      }
    }
  }
}
