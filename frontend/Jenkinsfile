pipeline {
  agent {
    label 'docker-agent'
  }

  tools {
    nodejs '18.6.0'
  }

  stages {
    stage('Build') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm install @angular/cli --location=global'
          sh 'ng build'
        }
      }
    }
    stage('Deploy') {
      when {
        expression {
          currentBuild.result == null || currentBuild.result == 'SUCCESS'
        }
      }
      steps {
      dir('frontend') {
        withCredentials([sshUserPrivateKey(credentialsId: 'raspberry-pi-ssh', keyFileVariable: 'identity', passphraseVariable: '', usernameVariable: 'userName')]) {
          remote.user = userName
          remote.identityFile = identity
          sshPut remote: remote, from: 'dist/mfb-frontend/index.html', into: '.'
        }
        }
      }
    }
  }
}
